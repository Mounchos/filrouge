{% extends '2fabase.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/2faLoginStyle1.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center mt-4">
            <div class="col-md-3">
                <h1 class="h3 mb-3 font-weight-normal text-center">Veuillez mettre le code que vous avez reçu par mail.</h1>
                <form class="form" action="/2fa_check" method="post">
                    <div class="form-group">
                        <label for="_auth_code" class="form-control-label">Entrez votre code à 6 chiffres:</label>
                        <input id="_auth_code" type="text" name="_auth_code" pattern="[0-9]{6}" title="Veuillez entrer un code à 6 chiffres." class="form-control" autocomplete="one-time-code" autofocus required>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Connexion</button>
                        <a href="/logout" class="btn btn-danger">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
